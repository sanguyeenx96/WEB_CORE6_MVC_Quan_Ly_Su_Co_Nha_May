@model BaoLoi.Models.Listjig

@{
    ViewData["Active"] = "4";

    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .col-form-label {
        text-align: center;
    }
</style>

<title>Sửa thông tin </title>

<section class="content-header">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Sửa thông tin</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Quản lý danh sách Jig</li>
                        <li class="breadcrumb-item active">Sửa thông tin </li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <form asp-controller="Listjigs" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12 ">
                    <input type="hidden" asp-for="Id" />
                    <div class="card card-warning shadow">
                        <div class="card-header border-transparent">
                            <h3 class="card-title"><i class="fas fa-caret-down"> </i> Sửa thông tin dữ liệu </h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="maximize">
                                    <i class="fas fa-expand"></i>
                                </button>

                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Model</label>
                                <div class="col-9">
                                    <input asp-for="Model" class="form-control" readonly="@(true)" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Cell</label>
                                <div class="col-9">
                                    <input asp-for="Cell" class="form-control" placeholder="Nhập số cell (Có thể không nhập)" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Station</label>
                                <div class="col-9">
                                    <input asp-for="Station" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Tên Jig</label>
                                <div class="col-9">
                                    <input asp-for="Jigname" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Mã Jig</label>
                                <div class="col-9">
                                    <input asp-for="Jigno" class="form-control" placeholder="Nhập mã Jig" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3 col-form-label">Jig quan trọng</label>
                                <div class="col-9">
                                    <select asp-for="Quantrong" class="form-control" asp-items="ViewBag.list_quantrong"></select>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-default" href="javascript: history.go(-1)"><i class="fa fa-arrow-left"></i> Quay lại</a>
                            <button type="submit" class="btn btn-success float-right "><i class="fa fa-check"> </i> Hoàn thành</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>






